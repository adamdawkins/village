<div class="container pt-5">
  <div class="row">
    <div class="col-md-6">
      <div class="card">
      
        <div class="card-body">
          <h3><%= current_sponsor.child.name %></h3> 
          <div class="card-actions">
            <%= link_to "View profile", current_sponsor.child %>
          </div>
        </div>
      </div>
      <h2>Community Feed</h2>
      <%= simple_form_for current_sponsor.posts.build do |f|%>
        <%= f.error_notification %>
        <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

        <div class="form-inputs">
          <%= f.input :title %>
          <%= f.input :content, as: :text %>
    <%= f.input :authorable_id, :input_html => { :value => current_sponsor.id }, :as => :hidden %>
    <%= f.input :authorable_type, :input_html => { :value => 'Child' }, :as => :hidden %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, class: "btn-primary" %>
        </div>
<% end %>
      <%= render current_sponsor.feed %>
    </div>
  </div>
</div>
